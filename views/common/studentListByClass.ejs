
<h1>Student List for <%= className %></h1>

<% if (messages.error.length > 0) { %>
    <div class="flash-message error">
        <% messages.error.forEach(function(msg) { %>
            <p><%= msg %></p>
        <% }) %>
    </div>
<% } %>
<% if (messages.success.length > 0) { %>
    <div class="flash-message success">
        <% messages.success.forEach(function(msg) { %>
            <p><%= msg %></p>
        <% }) %>
    </div>
<% } %>
<div class="container">


    <% if (students && students.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.student_id %></td>
                        <td><%= student.first_name %></td>
                        <td><%= student.last_name %></td>
                        <td>
                            <a href="/common/editstudent?studentId=<%= student.student_id %>">Edit</a>
                            <a href="/common/deleteStudent?studentId=<%= student.student_id %>" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No students found for this class.</p>
    <% } %>
</div>

