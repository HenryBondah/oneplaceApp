<head>

    <script>
        async function fetchSubjects(classId, containerId) {
            try {
                const response = await fetch(`/common/getSubjectsByClass?classId=${classId}`);
                const subjects = await response.json();
                const container = document.getElementById(containerId);

                container.innerHTML = '';
                if (subjects.length > 0) {
                    subjects.forEach(subject => {
                        const checkbox = document.createElement('input');
                        checkbox.type = 'checkbox';
                        checkbox.name = 'subjects';
                        checkbox.value = subject.subject_id;

                        const label = document.createElement('label');
                        label.textContent = subject.subject_name;

                        const div = document.createElement('div');
                        div.appendChild(checkbox);
                        div.appendChild(label);

                        container.appendChild(div);
                    });
                } else {
                    container.innerHTML = 'No subjects available for this class.';
                }
            } catch (error) {
                console.error('Error fetching subjects:', error);
            }
        }

        function toggleSubjects(classId, containerId) {
            const container = document.getElementById(containerId);
            const checkbox = document.querySelector(`input[name="classes"][value="${classId}"]`);
            if (checkbox.checked) {
                fetchSubjects(classId, containerId);
                container.style.display = 'block';
            } else {
                container.style.display = 'none';
            }
        }
    </script>
</head>
<style> /* Flash messages */
    .flash-message {
     text-align: center;
     margin-bottom: 20px;
     padding: 10px;
     border-radius: 5px;
   }
   
   .flash-success {
     background-color: #d4edda;
     color: #155724;
   }
   
   .flash-error {
     background-color: #f8d7da;
     color: #721c24;
   }
   
   /* Form styling */
   .form-group {
     margin-bottom: 15px;
   }
   
   label {
     display: inline-block;
     width: 150px;
     font-weight: bold;
   }
   
   input[type="text"], input[type="email"], input[type="password"], select {
     padding: 8px;
     width: 250px;
     border: 1px solid #ccc;
     border-radius: 4px;
   }
   
   /* Class and subject containers */
   .class-container {
     margin-bottom: 20px;
   }
   
   .class-checkbox {
     display: flex;
     align-items: center;
     margin-bottom: 10px;
   }
   
   .class-checkbox label {
     margin-left: 10px;
   }
   
   /* Center checkbox and label for both classes and subjects */
   .class-checkbox, .subject-container div {
     display: flex;
     align-items: center;
   }
   
   /* Additional spacing for subjects */
   .subject-container {
     margin-left: 30px;
     margin-top: 10px;
   }
   
   .subject-container div {
     margin-bottom: 5px;
   }
   
  
   
   /* Container for entire form */
   .create-employee-container {
     padding: 20px;
   }
   
   .checkbox-group {
     display: flex;
     flex-direction: column;
   }
   
   .checkbox-group label {
     margin-bottom: 5px;
   }
   
   .line-divider {
     width: 100%;
     border-top: 2px solid #ddd;
     margin: 20px 0;
   }</style>

<body>
    <% if (messages && messages.success && messages.success.length > 0) { %>
        <div class="flash-message flash-success">
            <%= messages.success[0] %>
        </div>
    <% } %>
    <% if (messages && messages.error && messages.error.length > 0) { %>
        <div class="flash-message flash-error">
            <%= messages.error[0] %>
        </div>
    <% } %>

    <div class="link-to-next-back">
        <a href="/common/manageEmployees">Manage Employees</a>
    </div>
    <div class="separator"></div>

    <h1>Create Employee</h1>

    <form action="/common/createEmployee" method="post">
        <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required>
        </div>
        <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div class="form-group">
            <label for="account_type">Role:</label>
            <select id="account_type" name="account_type" required>
                <option value="">-- Select Role --</option>
                <option value="Manager">Manager</option>
                <option value="Supervisor">Supervisor</option>
                <option value="Teacher">Teacher</option>
            </select>
        </div>

        <div class="class-container">
            <h3>Assign Classes and Subjects:</h3>
            <% classes.forEach(cls => { %>
                <div class="class-checkbox">
                    <input type="checkbox" name="classes" value="<%= cls.class_id %>" onchange="toggleSubjects(<%= cls.class_id %>, 'subjects-container-<%= cls.class_id %>')">
                    <label for="class_<%= cls.class_id %>"><%= cls.class_name %></label>
                </div>
                <div id="subjects-container-<%= cls.class_id %>" class="subject-container" style="display: none;"></div>
            <% }); %>
        </div>

        <button type="submit">Create Employee</button>
    </form>
</body>



