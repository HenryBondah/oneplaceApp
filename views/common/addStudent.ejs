
<main class="add-student-container">
    <h1>Add New Student</h1>
    <form action="/student/add" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="classSelect">Class Room:</label>
            <select id="classSelect" name="classSelect" required>
                <option value="">Select Class</option>
                <!-- Dynamically populate classes -->
                <option value="class1">Class 1</option>
                <option value="class2">Class 2</option>
            </select>
        </div>
        <div class="form-group">
            <label for="firstName">Student First Name:</label>
            <input type="text" id="firstName" name="firstName" required>
        </div>
        <div class="form-group">
            <label for="lastName">Student Last Name:</label>
            <input type="text" id="lastName" name="lastName" required>
        </div>
        <div class="form-group">
            <label for="age">Student Age:</label>
            <input type="number" id="age" name="age" required>
        </div>
        <div class="form-group">
            <label for="height">Student Height (cm):</label>
            <input type="number" id="height" name="height">
        </div>
        <div class="form-group">
            <label for="hometown">Student Hometown:</label>
            <input type="text" id="hometown" name="hometown">
        </div>
        <div class="form-group">
            <label for="studentImage">Student Image (Optional):</label>
            <input type="file" id="studentImage" name="studentImage" accept="image/*">
        </div>
        <!-- Guardian Information (Duplicated for 3 Guardians, only first required) -->
        <!-- Guardian 1 (Required) -->
        <fieldset>
            <legend>Guardian 1 Information (Required)</legend>
            <div class="form-group">
                <label for="guardian1FirstName">Guardian First Name:</label>
                <input type="text" id="guardian1FirstName" name="guardian1FirstName" required>
            </div>
            <div class="form-group">
                <label for="guardian1LastName">Guardian Last Name:</label>
                <input type="text" id="guardian1LastName" name="guardian1LastName" required>
            </div>
            <div class="form-group">
                <label for="guardian1Address">Guardian Address:</label>
                <input type="text" id="guardian1Address" name="guardian1Address" required>
            </div>
            <div class="form-group">
                <label for="guardian1Phone">Guardian Phone:</label>
                <input type="tel" id="guardian1Phone" name="guardian1Phone" required>
            </div>
            <div class="form-group">
                <label for="guardian1Hometown">Guardian Hometown:</label>
                <input type="text" id="guardian1Hometown" name="guardian1Hometown" required>
            </div>
            <div class="form-group">
                <label for="studentImage">Guardian Image (Optional):</label>
                <input type="file" id="studentImage" name="studentImage" accept="image/*">
            </div>
        </fieldset>

        <fieldset>
            <legend>Guardian 2 Information (Optional)</legend>
            <div class="form-group">
                <label for="guardian1FirstName">Guardian 2 First Name:</label>
                <input type="text" id="guardian1FirstName" name="guardian1FirstName" >
            </div>
            <div class="form-group">
                <label for="guardian1LastName">Guardian 2 Last Name:</label>
                <input type="text" id="guardian1LastName" name="guardian1LastName" >
            </div>
            <div class="form-group">
                <label for="guardian1Address">Guardian 2 Address:</label>
                <input type="text" id="guardian1Address" name="guardian1Address" >
            </div>
            <div class="form-group">
                <label for="guardian1Phone">Guardian 2 Phone:</label>
                <input type="tel" id="guardian1Phone" name="guardian1Phone" >
            </div>
            <div class="form-group">
                <label for="guardian1Hometown">Guardian 2 Hometown:</label>
                <input type="text" id="guardian1Hometown" name="guardian1Hometown" >
            </div>
            <div class="form-group">
                <label for="studentImage">Guardian Image (Optional):</label>
                <input type="file" id="studentImage" name="studentImage" accept="image/*">
            </div>
        </fieldset>
        <fieldset>
            <legend>Guardian 3 Information (optional)</legend>
            <div class="form-group">
                <label for="guardian1FirstName">Guardian 3 First Name:</label>
                <input type="text" id="guardian1FirstName" name="guardian1FirstName" >
            </div>
            <div class="form-group">
                <label for="guardian1LastName"> Guardian 3Last Name:</label>
                <input type="text" id="guardian1LastName" name="guardian1LastName" >
            </div>
            <div class="form-group">
                <label for="guardian1Address">Guardian 3 Address:</label>
                <input type="text" id="guardian1Address" name="guardian1Address" >
            </div>
            <div class="form-group">
                <label for="guardian1Phone">Guardian 3 Phone:</label>
                <input type="tel" id="guardian1Phone" name="guardian1Phone" >
            </div>
            <div class="form-group">
                <label for="guardian1Hometown">Guardian 3 Hometown:</label>
                <input type="text" id="guardian1Hometown" name="guardian1Hometown" >
            </div>
            <div class="form-group">
                <label for="studentImage">Guardian Image (Optional):</label>
                <input type="file" id="studentImage" name="studentImage" accept="image/*">
            </div>
        </fieldset>
        <BR></BR>
        <button type="submit">Add Student</button>
    </form>
</main>
