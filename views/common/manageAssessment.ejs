<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Assessments</title>

    <style>
        .manage-assessment-form {
            max-width: 90%;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .table-wrapper {
            overflow-x: auto;
            width: 100%;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            min-width: 1000px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
            font-size: 16px;
        }

        th {
            background-color: #f2f2f2;
            text-align: center;
        }

        .action-buttons button {
            padding: 10px 15px;
            font-size: 16px;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .action-buttons button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="link-to-next-back">
        <a href="/common/createTest?organizationId=<%= organizationId %>&termId=<%= termId %>">Back to Create Test</a>
    </div>
    <hr>
    <h1 style="text-align: center;">Manage Assessments</h1>
    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>Test Name</th>
                    <th>Weight (%)</th>
                    <th>Score Out Of</th>
                    <th>Category</th>
                    <th>Assigned Classes and Subjects</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% assessments.forEach(function(assessment) { %>
                    <tr>
                        <td><%= assessment.title %></td>
                        <td><%= assessment.weight %></td>
                        <td><%= assessment.max_score %></td>
                        <td><%= assessment.category %></td>
                        <td>
                            <% Object.keys(assessment.assigned_classes).forEach(function(classId) { %>
                                <div>
                                    <strong>Class <%= assessment.assigned_classes[classId].class_name %>:</strong>
                                    <ul>
                                        <% 
                                            let subjects = assessment.assigned_classes[classId].subjects;
                                            // Ensure that subjects are treated as an array, even if they aren't already.
                                            if (typeof subjects === 'string') {
                                                subjects = subjects.split(',').map(subject => subject.trim());
                                            }
                                            if (Array.isArray(subjects)) {
                                                subjects.forEach(function(subject) { 
                                        %>
                                                <li><%= subject %></li>
                                        <% 
                                                });
                                            } else {
                                        %>
                                                <li>No subjects assigned</li>
                                        <% 
                                            }
                                        %>
                                    </ul>
                                </div>
                            <% }); %>
                        </td>
                        <td>
                            <% Object.keys(assessment.assigned_classes).forEach(function(classId) { %>
                                <a href="/common/modifyAssessment?title=<%= assessment.title %>&classId=<%= classId %>&termId=<%= termId %>&organizationId=<%= organizationId %>">
                                    Modify for Class <%= assessment.assigned_classes[classId].class_name %>
                                </a>
                                <br>
                            <% }); %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
