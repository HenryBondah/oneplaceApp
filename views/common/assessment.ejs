<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assessment</title>
    <style>
        main {
            text-align: center;
            margin: 0 auto;
            width: 90%;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }
        button {
            margin-top: 10px;
        }
        .main {
            color: green;
            font-size: 1.2em;
        }
        .flash-success {
            color: green;
            font-weight: bold;
        }
        .flash-error {
            color: red;
            font-weight: bold;
        }

        #save-scores-form {
            width: 100%; 
            max-width: 1700px; 
            margin: 0 auto; 
            overflow-x: auto; 
        }

        .center-link {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .center-link button {
            margin: 0 10px;
            padding: 10px 20px;
            border: none;
            background-color: #007bff;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .center-link button:hover {
            background-color: #0056b3;
        }
        .table-container {
            overflow-x: auto;
        }
        @media (max-width: 768px) {
            .center-link {
                flex-direction: column;
                align-items: center;
            }
            .center-link button {
                margin: 5px 0;
            }
        }
    </style>
</head>
<body>
<main>
    <div class="center-link">
        <button onclick="location.href='/common/classDashboard?classId=<%= classId %>'">Back</button>
        <button onclick="location.href='/common/manageAssessment?classId=<%= classId %>&subjectId=<%= subjectId %>'">Manage Assessment</button>
    </div>

    <hr>
    <% if (messages.success && messages.success.length > 0) { %>
        <div class="flash-success"><%= messages.success %></div>
    <% } %>
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="flash-error"><%= messages.error %></div>
    <% } %>
    <h1>Assessments for <%= className %></h1>
    <h2>Subject: <%= subjectName %></h2>

    <div class="assigned-employees">
        <% employees.forEach(function(employee) { %>
            <div>
                <% if (employee.main) { %>
                    <span class="main">â€¢</span>
                <% } %>
                <%= employee.first_name %> <%= employee.last_name %>
            </div>
        <% }); %>
    </div>

    <form id="addTestForm">
        <h3>Add New Test</h3>
        <div class="form-group">
            <label for="testName">Test Name:</label>
            <input type="text" id="testName" name="testName" required>
        </div>
        <div class="form-group">
            <label for="testWeight">Test Weight:</label>
            <input type="number" id="testWeight" name="testWeight" step="0.1" required>
        </div>
        <div class="form-group">
            <label for="maxScore">Score Out Of:</label>
            <input type="number" id="maxScore" name="maxScore" required>
        </div>
        <input type="hidden" id="classId" value="<%= classId %>">
        <input type="hidden" id="subjectId" value="<%= subjectId %>">
        <button type="submit">Add Test</button>
    </form>
    
    <hr>

    <form id="save-scores-form">
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <% assessments.forEach(function(assessment) { %>
                            <th>
                                <%= assessment.title %> (<%= assessment.weight %>%)<br>
                                <hr>
                                Score Out Of: <%= assessment.max_score %>
                            </th>
                        <% }); %>
                        <th>Total Subject Score</th>
                        <th>Total Percentage</th>
                        <th>Grade</th>
                        <th>Position</th>
                    </tr>
                </thead>
                <tbody id="students-table-body">
                    <% students.forEach(function(student) { %>
                        <tr>
                            <td><%= student.first_name %> <%= student.last_name %></td>
                            <% let totalScore = 0; %>
                            <% assessments.forEach(function(assessment) { %>
                                <td>
                                    <input type="number" 
                                           name="scores[<%= student.student_id %>][<%= assessment.assessment_id %>]" 
                                           min="<%= assessment.max_score - 10 %>" 
                                           max="<%= assessment.max_score + 10 %>" 
                                           step="0.1" 
                                           value="<%= student.scores[assessment.assessment_id] %>">
                                    <% if (typeof student.scores[assessment.assessment_id] === "number") { %>
                                        <% totalScore += student.scores[assessment.assessment_id] %>
                                    <% } %>
                                </td>
                            <% }); %>
                            <td>
                                <span class="total-score" id="total-score-<%= student.student_id %>">
                                    <%= totalScore.toFixed(2) %>
                                </span>
                            </td>
                            <td>
                                <span class="total-percentage" id="total-percentage-<%= student.student_id %>">
                                    <%= student.total_percentage !== "-" ? student.total_percentage.toFixed(2) : "-" %>
                                </span>%
                            </td>
                            <td>
                                <span class="grade" id="grade-<%= student.student_id %>">
                                    <%= student.total_percentage !== "-" ? student.grade : "-" %>
                                </span>
                            </td>
                            <td>
                                <span class="position" id="position-<%= student.student_id %>">
                                    <%= student.position || "-" %>
                                </span>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <div class="center-link">
            <button type="button" id="save-all-scores-button">Save All Scores</button>
        </div>
    </form>
</main>

<script>
    function calculateTotalScoresAndRanks() {
        const rows = Array.from(document.querySelectorAll('#students-table-body tr'));
        const students = rows.map(row => {
            const scoreCells = row.querySelectorAll('input[name^="scores"]');
            let totalScore = 0;

            scoreCells.forEach((input) => {
                const score = parseFloat(input.value) || 0;
                totalScore += score;
            });

            row.querySelector('.total-score').textContent = totalScore.toFixed(2);

            return { row, totalScore };
        });

        // Sort by total score (highest to lowest)
        students.sort((a, b) => b.totalScore - a.totalScore);

        students.forEach((student, index) => {
            const positionCell = student.row.querySelector('.position');
            const position = index + 1;
            const suffix = getOrdinalSuffix(position);
            positionCell.textContent = `${position}${suffix}`;
        });
    }

    // Function to get the ordinal suffix
    function getOrdinalSuffix(i) {
        const j = i % 10,
              k = i % 100;
        if (j == 1 && k != 11) {
            return "st";
        }
        if (j == 2 && k != 12) {
            return "nd";
        }
        if (j == 3 && k != 13) {
            return "rd";
        }
        return "th";
    }

    // Calculate total scores and ranks on page load
    document.addEventListener('DOMContentLoaded', function() {
        calculateTotalScoresAndRanks();
    });

    document.getElementById('addTestForm').addEventListener('submit', async function(event) {
        event.preventDefault();
        const testName = document.getElementById('testName').value;
        const testWeight = document.getElementById('testWeight').value;
        const maxScore = document.getElementById('maxScore').value;
        const classId = document.getElementById('classId').value;
        const subjectId = document.getElementById('subjectId').value;

        try {
            const response = await fetch('/common/createTest', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ testName, testWeight, maxScore, classId, subjectId })
            });

            if (response.ok) {
                alert('Test added successfully.');
                window.location.reload();
            } else {
                alert('Error adding test.');
            }
        } catch (error) {
            alert('Error adding test.');
        }
    });

    document.getElementById('save-all-scores-button').addEventListener('click', function() {
        const formElement = document.getElementById('save-scores-form');
        const formData = new FormData(formElement);

        const scores = {};
        formData.forEach((value, key) => {
            const keys = key.match(/\[(.*?)\]/g).map(k => k.replace(/[\[\]]/g, ''));
            if (!scores[keys[0]]) {
                scores[keys[0]] = {};
            }
            if (value !== "") {
                scores[keys[0]][keys[1]] = parseFloat(value);
            }
        });

        saveAllScores(scores);
    });

    async function saveAllScores(scores) {
        const classId = "<%= classId %>";
        const subjectId = "<%= subjectId %>";

        try {
            const response = await fetch(`/common/saveAllScores?classId=${classId}&subjectId=${subjectId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ scores })
            });

            if (response.ok) {
                const data = await response.json();
                alert('Scores saved successfully.');
                location.reload();
            } else {
                alert('Error saving scores.');
            }
        } catch (error) {
            alert('Error saving scores.');
        }
    }
</script>
</body>
</html>
