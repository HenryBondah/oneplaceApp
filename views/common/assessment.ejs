<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assessment</title>
    <style>
        main {
            text-align: center;
            margin: 0 auto;
            width: 90%;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }
        button {
            margin-top: 10px;
        }
        .main {
            color: green;
            font-size: 1.2em;
        }
        .flash-success {
            color: green;
            font-weight: bold;
        }
        .flash-error {
            color: red;
            font-weight: bold;
        }
        #save-scores-form {
            width: 100%; 
            max-width: 1700px; 
            margin: 0 auto; 
            overflow-x: auto; 
        }
        .center-link {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .center-link button {
            margin: 0 10px;
            padding: 10px 20px;
            border: none;
            background-color: #007bff;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .center-link button:hover {
            background-color: #0056b3;
        }
        .table-container {
            overflow-x: auto;
        }
        .add-button {
            display: inline-block;
            margin-top: 10px;
            background-color: green;
            color: white;
            font-weight: bold;
            cursor: pointer;
            border-radius: 50%;
            padding: 0 10px;
            font-size: 20px;
            line-height: 25px;
        }
        .remove-button {
            display: inline-block;
            margin-top: 10px;
            background-color: red;
            color: white;
            font-weight: bold;
            cursor: pointer;
            border-radius: 50%;
            padding: 0 10px;
            font-size: 20px;
            line-height: 25px;
        }
        #test-forms {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }
        .test-form {
            width: 100%;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 20px;
            transition: width 0.3s ease;
        }
        .class-container {
            margin-bottom: 20px;
        }
        .class-checkbox, .subject-container div {
            display: flex;
            align-items: center;
        }
        .subject-container {
            margin-left: 30px;
            margin-top: 10px;
        }
        .subject-container div {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
<main>
    <div class="center-link">
        <button onclick="location.href='/common/classDashboard?classId=<%= classId %>'">Back</button>
        <button onclick="location.href='/common/manageAssessment?classId=<%= classId %>&subjectId=<%= subjectId %>'">Manage Assessment</button>
    </div>
    <hr>
    <% if (messages && messages.success && messages.success.length > 0) { %>
        <div class="flash-success"><%= messages.success %></div>
    <% } %>
    <% if (messages && messages.error && messages.error.length > 0) { %>
        <div class="flash-error"><%= messages.error %></div>
    <% } %>
    <h1>Assessments for <%= className %></h1>
    <h2>Subject: <%= subjectName %></h2>

    <div class="assigned-employees">
        <% employees.forEach(function(employee) { %>
            <div>
                <% if (employee.main) { %>
                    <span class="main">â€¢</span>
                <% } %>
                <%= employee.first_name %> <%= employee.last_name %>
            </div>
        <% }); %>
    </div>

    <hr>

    <!-- Scores Section -->
    <form id="save-scores-form">
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <% assessments.forEach(function(assessment) { %>
                            <th>
                                <%= assessment.title %> (<%= assessment.weight %>%)<br>
                                <%= assessment.category %><br>
                                <hr>
                                Score Out Of: <%= assessment.max_score %>
                            </th>
                        <% }); %>
                        <th>Total Subject Score</th>
                        <th>Total Percentage</th>
                        <th>Grade</th>
                        <th>Position</th>
                    </tr>
                </thead>
                
                <tbody id="students-table-body">
                    <% 
                    students.sort((a, b) => a.position - b.position);

                    function getOrdinalSuffix(i) {
                        const j = i % 10,
                              k = i % 100;
                        if (j == 1 && k != 11) {
                            return "st";
                        }
                        if (j == 2 && k != 12) {
                            return "nd";
                        }
                        if (j == 3 && k != 13) {
                            return "rd";
                        }
                        return "th";
                    }
                    %>
                
                    <% students.forEach(function(student, index) { %>
                        <tr>
                            <td><%= student.first_name %> <%= student.last_name %></td>
                            <% assessments.forEach(function(assessment) { %>
                                <td>
                                    <input type="number" 
                                           name="scores[<%= student.student_id %>][<%= assessment.assessment_id %>]" 
                                           min="0" 
                                           max="<%= assessment.max_score %>" 
                                           step="0.1" 
                                           value="<%= student.scores ? student.scores[assessment.assessment_id] : '' %>">
                                </td>
                            <% }); %>

                            <td><%= student.total_subject_score !== undefined && student.total_subject_score !== null ? parseFloat(student.total_subject_score).toFixed(2) : '-' %></td>
                            <td><%= student.total_percentage !== undefined && student.total_percentage !== null ? parseFloat(student.total_percentage).toFixed(2) : '-' %> %</td>
                            <td><%= student.grade ? student.grade : '-' %></td>
                            <td><%= student.position !== undefined && student.position !== null ? student.position + getOrdinalSuffix(student.position) : '-' %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <div class="center-link">
            <button type="button" id="save-all-scores-button">Save All Scores</button>
        </div>
    </form>

    <hr>

    <!-- Add Test Section -->
    <form id="addTestForm">
        <h3>Add New Test</h3>
        <div id="test-forms">
            <!-- The first test form will be dynamically inserted here -->
        </div>

        <!-- Add More Tests Button -->
        <div class="center-link">
            <span class="add-button" onclick="addTestForm()">+</span>
        </div>

        <button type="submit">Add Tests</button>
    </form>
</main>

<script>
    let testFormCount = 0;

    function addTestForm() {
        testFormCount++;
        const testFormsContainer = document.getElementById('test-forms');
        const newTestForm = document.createElement('div');
        newTestForm.classList.add('test-form');
        newTestForm.id = `test-form-${testFormCount}`;
        newTestForm.innerHTML = `
            <div class="form-group">
                <label for="testName">Test Name:</label>
                <input type="text" name="testName[]" required>
            </div>
            <div class="form-group">
                <label for="testWeight">Test Weight (%):</label>
                <input type="number" name="testWeight[]" step="0.1" required>
            </div>
            <div class="form-group">
                <label for="maxScore">Score Out Of:</label>
                <input type="number" name="maxScore[]" required>
            </div>
            <div class="form-group">
                <label for="category">Category:</label>
                <select name="category[]" required>
                    <option value="Class Assessment">Class Assessment</option>
                    <option value="Exams Assessment">Exams Assessment</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <div class="class-container">
                <h4>Assign Test to Other Classes and Subjects</h4>
                <% classes.forEach(cls => { %>
                    <div class="class-checkbox">
                        <input type="checkbox" name="classes-${testFormCount}[]" value="<%= cls.class_id %>" 
                               onchange="toggleSubjects(<%= cls.class_id %>, 'subjects-container-<%= cls.class_id %>-${testFormCount}')">
                        <label for="class_<%= cls.class_id %>"><%= cls.class_name %></label>
                    </div>
                    <div id="subjects-container-<%= cls.class_id %>-${testFormCount}" class="subject-container" style="display: none;">
                        <!-- Select All Subjects -->
                        <div>
                            <input type="checkbox" id="select-all-subjects-<%= cls.class_id %>-${testFormCount}" 
                                   onchange="selectAllSubjects('<%= cls.class_id %>-${testFormCount}')">
                            <label for="select-all-subjects-<%= cls.class_id %>-${testFormCount}">Select All Subjects</label>
                        </div>
                        <% subjects.forEach(subject => { %>
                            <% if (subject.class_id === cls.class_id) { %>
                                <div>
                                    <input type="checkbox" class="subject-checkbox-<%= cls.class_id %>-${testFormCount}" 
                                           name="subjects-${testFormCount}[]" value="<%= subject.subject_id %>">
                                    <label for="subject_<%= subject.subject_id %>"><%= subject.subject_name %></label>
                                </div>
                            <% } %>
                        <% }); %>
                    </div>
                <% }); %>
            </div>

            <span class="remove-button" onclick="removeTestForm(this)">-</span>
        `;
        testFormsContainer.appendChild(newTestForm);

        // Show the newly added form
        newTestForm.style.display = 'block';
        adjustFormWidths();
    }

    // Remove test form
    function removeTestForm(button) {
        const formToRemove = button.parentElement;
        formToRemove.remove();
        adjustFormWidths();
    }

    // Adjust form widths
    function adjustFormWidths() {
        const testForms = document.querySelectorAll('.test-form');
        if (testForms.length === 1) {
            testForms[0].style.width = '100%';
        } else {
            testForms.forEach(form => form.style.width = '48%');
        }
    }

    // Toggle subjects for the selected class
    function toggleSubjects(classId, containerId) {
        const container = document.getElementById(containerId);
        const checkbox = document.querySelector(`input[name="classes-${testFormCount}[]"][value="${classId}"]`);
        if (checkbox.checked) {
            container.style.display = 'block';
        } else {
            container.style.display = 'none';
        }
    }

    // Select/Deselect all subjects
    function selectAllSubjects(containerId) {
        const selectAllCheckbox = document.getElementById(`select-all-subjects-${containerId}`);
        const checkboxes = document.querySelectorAll(`.subject-checkbox-${containerId}`);
        checkboxes.forEach(checkbox => {
            checkbox.checked = selectAllCheckbox.checked;
        });
    }

    // Handle form submission
    document.getElementById('addTestForm').addEventListener('submit', async function(event) {
        event.preventDefault();
        const formElement = document.getElementById('addTestForm');
        const formData = new FormData(formElement);

        const tests = [];
        const testNames = formData.getAll('testName[]');
        const testWeights = formData.getAll('testWeight[]');
        const maxScores = formData.getAll('maxScore[]');
        const categories = formData.getAll('category[]');

        for (let i = 0; i < testNames.length; i++) {
            tests.push({
                testName: testNames[i],
                testWeight: testWeights[i],
                maxScore: maxScores[i],
                category: categories[i],
            });
        }

        const classId = "<%= classId %>";
        const subjectId = "<%= subjectId %>";

        try {
            const response = await fetch('/common/createTest', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ tests, classId, subjectId })
            });

            if (response.ok) {
                alert('Tests added successfully.');
                window.location.reload();
            } else {
                alert('Error adding tests.');
            }
        } catch (error) {
            alert('Error adding tests.');
        }
    });

    // Ensure the form widths adjust when the page loads
    window.onload = adjustFormWidths;
</script>
</body>
</html>
