<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assessment</title>
    <style>
        main {
            text-align: center;
            margin: 0 auto;
            width: 90%;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }
        button {
            margin-top: 10px;
        }
        .main {
            color: green;
            font-size: 1.2em;
        }
        .flash-success {
            color: green;
            font-weight: bold;
        }
        .flash-error {
            color: red;
            font-weight: bold;
        }
        .center-link {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .center-link button {
            margin: 0 10px;
            padding: 10px 20px;
            border: none;
            background-color: #007bff;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .center-link button:hover {
            background-color: #0056b3;
        }
        .table-container {
            overflow-x: auto;
        }
        @media (max-width: 768px) {
            .center-link {
                flex-direction: column;
                align-items: center;
            }
            .center-link button {
                margin: 5px 0;
            }
        }
    </style>
</head>
<body>
<main>
    <div class="center-link">
        <button onclick="location.href='/common/classDashboard?classId=<%= classId %>'">Back</button>
        <button onclick="location.href='/common/manageAssessment?classId=<%= classId %>&subjectId=<%= subjectId %>'">Manage Assessment</button>
    </div>

    <hr>
    <% if (messages.success && messages.success.length > 0) { %>
        <div class="flash-success"><%= messages.success %></div>
    <% } %>
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="flash-error"><%= messages.error %></div>
    <% } %>
    <h1>Assessments for <%= className %></h1>
    <h2>Subject: <%= subjectName %></h2>

    <div class="assigned-employees">
        <% employees.forEach(function(employee) { %>
            <div>
                <% if (employee.main) { %>
                    <span class="main">â€¢</span>
                <% } %>
                <%= employee.first_name %> <%= employee.last_name %>
            </div>
        <% }); %>
    </div>

    <form id="save-scores-form">
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <% assessments.forEach(function(assessment) { %>
                            <th><%= assessment.title %> (<%= assessment.weight %>%)</th>
                        <% }); %>
                        <th>Total Percentage</th>
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(function(student) { %>
                        <tr>
                            <td><%= student.first_name %> <%= student.last_name %></td>
                            <% assessments.forEach(function(assessment) { %>
                                <td>
                                    <input type="number" name="scores[<%= student.student_id %>][<%= assessment.assessment_id %>]" min="0" max="100" step="0.1" value="<%= student.scores[assessment.assessment_id] %>">
                                </td>
                            <% }); %>
                            <td>
                                <span class="total-percentage" id="total-percentage-<%= student.student_id %>">
                                    <%= student.total_percentage !== "-" ? student.total_percentage.toFixed(2) : "-" %>
                                </span>%
                            </td>
                            <td>
                                <span class="grade" id="grade-<%= student.student_id %>">
                                    <%= student.total_percentage !== "-" ? student.grade : "-" %>
                                </span>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <div class="center-link">
            <button type="button" id="save-all-scores-button">Save All Scores</button>
        </div>
    </form>
</main>

<script>
document.getElementById('save-all-scores-button').addEventListener('click', function() {
    const formElement = document.getElementById('save-scores-form');
    const formData = new FormData(formElement);

    const scores = {};
    formData.forEach((value, key) => {
        const keys = key.match(/\[(.*?)\]/g).map(k => k.replace(/[\[\]]/g, ''));
        if (!scores[keys[0]]) {
            scores[keys[0]] = {};
        }
        if (value !== "") {
            scores[keys[0]][keys[1]] = parseFloat(value);
        }
    });

    saveAllScores(scores);
});

async function saveAllScores(scores) {
    const classId = "<%= classId %>";
    const subjectId = "<%= subjectId %>";

    try {
        const response = await fetch(`/common/saveAllScores?classId=${classId}&subjectId=${subjectId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ scores })
        });

        if (response.ok) {
            const data = await response.json();
            alert(data.message);
            location.reload(); // Reloads the page to show updated scores and grades
        } else {
            const errorData = await response.json();
            alert(errorData.error || 'Error saving scores.');
        }
    } catch (error) {
        alert('Error saving scores.');
    }
}
</script>
</body>
</html>