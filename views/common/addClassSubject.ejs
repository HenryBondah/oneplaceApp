<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
</head>
<body>
    <main class="add-class-subject-container">
        <h1>Add Class and Subject</h1>
        <div class="messages">
            <% if (messages.success) { %>
                <p class="success"><%= messages.success %></p>
            <% } %>
            <% if (messages.error) { %>
                <p class="error"><%= messages.error %></p>
            <% } %>
        </div>
        <div class="form-section">
            <form action="/common/addClass" method="POST">
                <h2>Add Class</h2>
                <label for="className">Class Name:</label>
                <input type="text" id="className" name="className" required>
                
                <label for="gradYearGroupId">Graduation Year Group:</label>
                <select id="gradYearGroupId" name="gradYearGroupId">
                    <% availableGradYearGroups.forEach(function(group) { %>
                        <option value="<%= group.id %>"><%= group.name %></option>
                    <% }); %>
                </select>

                <button type="submit">Add Class</button>
            </form>
        </div>
        <div class="form-section">
            <form action="/common/addSubject" method="POST">
                <h2>Add Subject</h2>
                <label for="subjectName">Subject Name:</label>
                <input type="text" id="subjectName" name="subjectName" required>
                
                <label for="classId">Class:</label>
                <select id="classId" name="classId">
                    <% classes.forEach(function(classItem) { %>
                        <option value="<%= classItem.class_id %>"><%= classItem.class_name %></option>
                    <% }); %>
                </select>

                <button type="submit">Add Subject</button>
            </form>
        </div>
        <div class="form-section">
            <form action="/addGraduationYearGroup" method="POST">
                <h2>Add Graduation Year Group</h2>
                <label for="graduationYear">Graduation Year:</label>
                <input type="number" id="graduationYear" name="graduationYear" required>
                <button type="submit">Add Graduation Year Group</button>
            </form>
        </div>
    </main>
</body>
</html>
