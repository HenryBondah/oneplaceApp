<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Students</title>
    <style>
        .link-to-add-student {
            text-align: center;
            margin-bottom: 20px;
        }
        .link-to-add-student a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .link-to-add-student a:hover {
            background-color: #0056b3;
        }
        .separator {
            border-bottom: 1px solid #ccc;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <!-- Add the link to the Add Student page -->
    <div class="link-to-add-student">
        <a href="/common/addStudent">Add Student</a>
    </div>

    <!-- Horizontal line separator -->
    <div class="separator"></div>

    <form action="/common/studentListByClass" method="get">
        <select name="classId" required>
            <option value="">Select a Class</option>
            <% classes.forEach(cls => { %>
                <option value="<%= cls.class_id %>"><%= cls.class_name %></option>
            <% }); %>
        </select>
        <button type="submit">View Students</button>
    </form>
</body>
</html>
