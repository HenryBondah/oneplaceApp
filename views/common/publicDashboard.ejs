<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Public Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .public-dashboard-container {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 90%;
            max-width: 1200px;
            margin: auto;
        }

        .hero-container {
            width: 100%;
            max-width: 1000px;
            margin: 20px 0;
            position: relative;
            background: #f9f9f9;
            border-radius: 8px;
        }

        .hero-container img {
            width: 100%;
            height: auto;
        }

        .hero-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #f2f2f2;
            font-size: 24px;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px 20px;
            border-radius: 5px;
            text-align: center;
        }

        .slideshow-container {
            width: 100%;
            max-width: 800px;
            height: 450px;
            position: relative;
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow: hidden;
        }

        .mySlides {
            display: none;
            width: 100%;
            height: 100%;
        }

        .active-slide {
            display: block;
        }

        .slideshow-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .text {
            color: #f2f2f2;
            font-size: 15px;
            padding: 8px 12px;
            position: absolute;
            bottom: 8px;
            width: 100%;
            text-align: center;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .text-item {
            text-align: center;
            margin: 20px 0;
        }

      

        .prev, .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            padding: 16px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            user-select: none;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }

        .prev:hover, .next:hover {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .draggable-item {
            margin: 10px 0;
            padding: 10px;
            background: #fff;
            border: 1px solid #ccc;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        #save-order-btn {
            margin: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #save-order-btn:hover {
            background-color: #0056b3;
        }

        #confirmation-message {
            margin: 20px 0;
            padding: 10px;
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
            border-radius: 5px;
            display: none;
        }

        @media (max-width: 768px) {
            .slideshow-container {
                height: auto;
            }

            .text {
                font-size: 12px;
                padding: 6px 8px;
            }

            .prev, .next {
                padding: 10px;
                font-size: 16px;
            }
        }
    </style>
</head>
<body>
    <div class="public-dashboard-container">
        <h1>Public Dashboard</h1>

        <div id="draggable-container">

            <% if (heroImage) { %>
                <div class="hero-container draggable-item" data-id="heroImage">
                    <img src="/<%= heroImage.image_url %>" alt="Hero Image">
                    <div class="hero-text"><%= heroImage.caption %></div>
                </div>
            <% } %>
            
            <div class="slideshow-container draggable-item" data-id="slideshow">
                <% if (slideshowImages.length === 0) { %>
                <% } else { %>
                    <% slideshowImages.forEach((image, index) => { %>
                        <div class="mySlides <%= index === 0 ? 'active-slide' : '' %>">
                            <img src="/<%= image.image_url %>" alt="Slideshow Image">
                            <div class="text"><%= image.caption %></div>
                        </div>
                    <% }) %>
                    <a class="prev" onclick="changeSlide(-1)">&#10094;</a>
                    <a class="next" onclick="changeSlide(1)">&#10095;</a>
                <% } %>
            </div>

            <% if (texts.length === 0) { %>
            <% } else { %>
                <% texts.forEach(text => { %>
                    <div class="text-item draggable-item" data-id="text-<%= text.id %>">
                        <div>
                            <h2><%= text.heading %></h2>
                            <p><%= text.paragraph %></p>
                        </div>
                    </div>
                <% }) %>
            <% } %>

            <div class="events-container draggable-item" data-id="events">
                <div>
                    <h2>Events</h2>
                    <ul>
                        <% if (events.length === 0) { %>
                            <li>No events found</li>
                        <% } else { %>
                            <% events.forEach(event => { %>
                                <li><strong><%= event.name %></strong> - <%= new Date(event.event_date).toISOString().split('T')[0] %><br><%= event.details %></li>
                            <% }) %>
                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="announcements-container draggable-item" data-id="announcements">
                <div>
                    <h2>Announcements</h2>
                    <ul>
                        <% if (announcements.length === 0) { %>
                            <li>No announcements found</li>
                        <% } else { %>
                            <% announcements.forEach(announcement => { %>
                                <li><%= announcement.message %></li>
                            <% }) %>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>

        <button id="save-order-btn">Save Order</button>
        <div id="confirmation-message">Order saved successfully!</div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <script>
        let slideIndex = 0;
        let slideInterval;

        function showSlides() {
            let slides = document.getElementsByClassName("mySlides");
            for (let i = 0; i < slides.length; i++) {
                slides[i].classList.remove('active-slide');
            }
            slideIndex++;
            if (slideIndex > slides.length) {
                slideIndex = 1;
            }
            slides[slideIndex - 1].classList.add('active-slide');
        }

        function changeSlide(n) {
            let slides = document.getElementsByClassName("mySlides");
            for (let i = 0; i < slides.length; i++) {
                slides[i].classList.remove('active-slide');
            }
            slideIndex += n;
            if (slideIndex > slides.length) {
                slideIndex = 1;
            }
            if (slideIndex < 1) {
                slideIndex = slides.length;
            }
            slides[slideIndex - 1].classList.add('active-slide');
            resetSlideInterval();
        }

        function resetSlideInterval() {
            clearInterval(slideInterval);
            slideInterval = setInterval(showSlides, 5000);
        }

        document.addEventListener("DOMContentLoaded", () => {
            showSlides();
            slideInterval = setInterval(showSlides, 5000);

            const sortable = new Sortable(document.getElementById('draggable-container'), {
                animation: 150,
                handle: '.draggable-item',
                onEnd: function (evt) {
                    evt.oldIndex;  // element's old index within parent
                    evt.newIndex;  // element's new index within parent
                }
            });

            document.getElementById('save-order-btn').addEventListener('click', () => {
                const items = document.querySelectorAll('.draggable-item');
                const order = Array.from(items).map(item => item.dataset.id);
                
                fetch('/save-order', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ order })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById('confirmation-message').style.display = 'block';
                        setTimeout(() => {
                            document.getElementById('confirmation-message').style.display = 'none';
                        }, 3000);
                    } else {
                        alert('Failed to save order.');
                    }
                })
                .catch(error => console.error('Error saving order:', error));
            });
        });
    </script>
</body>
</html>
