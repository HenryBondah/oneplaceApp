<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Public Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .public-dashboard-container {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 90%;
            max-width: 1200px;
            margin: auto;
        }

        .hero-container {
            width: 100%;
            max-width: 1000px;
            margin: 20px 0;
            position: relative;
        }

        .hero-container img {
            width: 100%;
            height: auto;
        }

        .hero-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #f2f2f2;
            font-size: 24px;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px 20px;
            border-radius: 5px;
            text-align: center;
        }

        .slideshow-container {
            width: 100%;
            max-width: 800px;
            height: 450px;
            position: relative;
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow: hidden;
        }

        .mySlides {
            display: none;
            width: 100%;
            height: 100%;
        }

        .active-slide {
            display: block;
        }

        .slideshow-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .text {
            color: #f2f2f2;
            font-size: 15px;
            padding: 8px 12px;
            position: absolute;
            bottom: 8px;
            width: 100%;
            text-align: center;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .text-item {
            text-align: center;
            margin: 20px 0;
        }

        .calendar-container {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
        }

        .date {
            font-size: 24px;
            font-weight: bold;
        }

        .time {
            font-size: 16px;
            color: #555;
        }

        .events-container, .announcements-container {
            width: 100%;
            max-width: 1000px;
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .prev, .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            padding: 16px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            user-select: none;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 50%;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }

        .prev:hover, .next:hover {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .draggable-item {
            margin: 10px 0;
            padding: 10px;
            background: #fff;
            border: 1px solid #ccc;
            border-radius: 4px;
            display: flex;
            align-items: center;
        }

        .drag-handle {
            cursor: grab;
            margin-right: 10px;
            color: #ccc;
        }

        @media (max-width: 768px) {
            .slideshow-container {
                height: auto;
            }

            .text {
                font-size: 12px;
                padding: 6px 8px;
            }

            .prev, .next {
                padding: 10px;
                font-size: 16px;
            }
        }
    </style>
</head>
<body>
    <div class="public-dashboard-container">
        <h1>Public Dashboard</h1>
        <% if (heroImage) { %>
            <div class="hero-container draggable-item">
                <span class="drag-handle">&#x2630;</span>
                <img src="/<%= heroImage.image_url %>" alt="Hero Image">
                <div class="hero-text"><%= heroImage.caption %></div>
            </div>
        <% } %>
        <div class="slideshow-container">
            <% if (slideshowImages.length === 0) { %>
                <p>No images available now.</p>
            <% } else { %>
                <% slideshowImages.forEach((image, index) => { %>
                    <div class="mySlides <%= index === 0 ? 'active-slide' : '' %>">
                        <img src="/<%= image.image_url %>" alt="Slideshow Image">
                        <div class="text"><%= image.caption %></div>
                    </div>
                <% }) %>
                <a class="prev" onclick="changeSlide(-1)">&#10094;</a>
                <a class="next" onclick="changeSlide(1)">&#10095;</a>
            <% } %>
        </div>

        <div id="draggable-container">
            <% if (texts.length === 0) { %>
                <p>No texts available now.</p>
            <% } else { %>
                <% texts.forEach(text => { %>
                    <div class="text-item draggable-item">
                        <span class="drag-handle">&#x2630;</span>
                        <div>
                            <h2><%= text.heading %></h2>
                            <p><%= text.paragraph %></p>
                        </div>
                    </div>
                <% }) %>
            <% } %>

            <div class="events-container draggable-item">
                <span class="drag-handle">&#x2630;</span>
                <div>
                    <h2>Events</h2>
                    <ul>
                        <% if (events.length === 0) { %>
                            <li>No events found</li>
                        <% } else { %>
                            <% events.forEach(event => { %>
                                <li><strong><%= event.name %></strong> - <%= new Date(event.event_date).toISOString().split('T')[0] %><br><%= event.details %></li>
                            <% }) %>
                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="announcements-container draggable-item">
                <span class="drag-handle">&#x2630;</span>
                <div>
                    <h2>Announcements</h2>
                    <ul>
                        <% if (announcements.length === 0) { %>
                            <li>No announcements found</li>
                        <% } else { %>
                            <% announcements.forEach(announcement => { %>
                                <li><%= announcement.message %></li>
                            <% }) %>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <script>
        let slideIndex = 0;
        let slideInterval;

        function updateDateTime() {
            const now = new Date();
            document.getElementById('publicCurrentDate').innerText = now.toLocaleDateString();
            document.getElementById('publicCurrentTime').innerText = now.toLocaleTimeString();
        }

        function showSlides() {
            let slides = document.getElementsByClassName("mySlides");
            for (let i = 0; i < slides.length; i++) {
                slides[i].classList.remove('active-slide');
            }
            slideIndex++;
            if (slideIndex > slides.length) {
                slideIndex = 1;
            }
            slides[slideIndex - 1].classList.add('active-slide');
        }

        function changeSlide(n) {
            let slides = document.getElementsByClassName("mySlides");
            for (let i = 0; i < slides.length; i++) {
                slides[i].classList.remove('active-slide');
            }
            slideIndex += n;
            if (slideIndex > slides.length) {
                slideIndex = 1;
            }
            if (slideIndex < 1) {
                slideIndex = slides.length;
            }
            slides[slideIndex - 1].classList.add('active-slide');
            resetSlideInterval();
        }

        function resetSlideInterval() {
            clearInterval(slideInterval);
            slideInterval = setInterval(showSlides, 5000);
        }

        document.addEventListener("DOMContentLoaded", () => {
            updateDateTime();
            setInterval(updateDateTime, 1000);
            showSlides();
            slideInterval = setInterval(showSlides, 5000);

            new Sortable(document.getElementById('draggable-container'), {
                animation: 150,
                handle: '.drag-handle'
            });
        });
    </script>
</body>
</html>
