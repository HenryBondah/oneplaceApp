<!-- views/common/scoreDisplay.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        main {
            text-align: center;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
        }
        .flash-success {
            color: green;
            font-weight: bold;
        }
        .flash-error {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>
<main>
    <% if (messages.success && messages.success.length > 0) { %>
        <div class="flash-success"><%= messages.success %></div>
    <% } %>
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="flash-error"><%= messages.error %></div>
    <% } %>

    <h1>Scores for <%= className %> - <%= subjectName %></h1>

    <table>
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Assessment</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            <% scores.forEach(function(score) { %>
                <tr>
                    <td><%= score.first_name %> <%= score.last_name %></td>
                    <td><%= score.title %></td>
                    <td><%= score.score %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</main>
</body>
</html>
