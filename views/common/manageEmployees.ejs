<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <style>
        .flash-message {
            text-align: center;
            margin-bottom: 20px;
            padding: 10px;
            border-radius: 5px;
        }
        .flash-success {
            background-color: #d4edda;
            color: #155724;
        }
        .flash-error {
            background-color: #f8d7da;
            color: #721c24;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            overflow-x: auto;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .link-button {
            text-align: center;
            margin-bottom: 20px;
        }
        .link-button a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .link-button a:hover {
            background-color: #0056b3;
        }
        .separator {
            border-bottom: 1px solid #ccc;
            margin: 20px 0;
        }
        .hold-status {
            color: red;
            font-weight: bold;
        }

        @media (max-width: 768px) {
            .link-to-next-back {
                display: flex;
                justify-content: center;
                margin-bottom: 20px;
            }
            .link-to-next-back a {
                display: inline-block;
                padding: 8px 16px;
                background-color: #007bff;
                color: #fff;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }
            .link-to-next-back a:hover {
                background-color: #0056b3;
            }
            table, thead, tbody, th, td, tr {
                display: block;
            }
            thead {
                display: none;
            }
            tr {
                margin-bottom: 15px;
                border-bottom: 1px solid #ddd;
            }
            td {
                text-align: right;
                padding-left: 50%;
                position: relative;
            }
            td:before {
                content: attr(data-label);
                position: absolute;
                left: 10px;
                width: calc(50% - 20px);
                white-space: nowrap;
                text-align: left;
                font-weight: bold;
            }
        }
    </style>
</head>
<body>
    <% if (messages.success && messages.success.length > 0) { %>
        <div class="flash-message flash-success">
            <%= messages.success[0] %>
        </div>
    <% } %>
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="flash-message flash-error">
            <%= messages.error[0] %>
        </div>
    <% } %>

    <div class="link-to-next-back">
        <a href="/common/createEmployee">Add Employee</a>
    </div>
<hr>

    <h1><%= title %></h1>

    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Classes</th>
                <th>Subjects</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% employees.forEach(employee => { %>
                <tr>
                    <td data-label="First Name"><%= employee.first_name %></td>
                    <td data-label="Last Name"><%= employee.last_name %></td>
                    <td data-label="Email"><%= employee.email %></td>
                    <td data-label="Role"><%= employee.account_type %></td>
                    <td data-label="Classes">
                        <ul>
                            <% employee.classes.forEach(cls => { %>
                                <li><%= cls.class_name %></li>
                            <% }); %>
                        </ul>
                    </td>
                    <td data-label="Subjects">
                        <ul>
                            <% employee.subjects.forEach(sub => { %>
                                <li><%= sub.subject_name %></li>
                            <% }); %>
                        </ul>
                    </td>
                    <td data-label="Actions">
                        <a href="/common/modifyEmployee?userId=<%= employee.user_id %>">Modify</a>
                        <% if (employee.on_hold) { %>
                            <span class="hold-status">Hold</span>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
