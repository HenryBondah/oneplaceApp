
<main class="personalization-container">
    <h1>Personalize Your Interface</h1>
    <form action="/apply-personalization" method="POST" enctype="multipart/form-data">
        

        <div class="form-group">
            <label for="OrgName">Organization Name:</label>
        <input type="text" name="orgName" required>
        </div>
        <div class="form-group">
            <label for="logo">Upload Logo:</label>
            <input type="file" id="logo" name="logo" accept="image/*">
        </div>
        <div class="form-group">
            <label for="color">Choose Primary Color:</label>
            <input type="color" id="color" name="color">
        </div>
        <div class="form-group">
            <label for="font">Select Font Type:</label>
            <select id="font" name="font">
                <option value="Arial">Arial</option>
                <option value="Verdana">Verdana</option>
                <option value="Helvetica">Helvetica</option>
                <option value="Times New Roman">Times New Roman</option>
                <!-- Add more font options as needed -->
            </select>
        </div>
        <button type="submit">Apply Personalization</button>
    </form>
</main>
