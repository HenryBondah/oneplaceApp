<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Print Student</title>
    <link rel="stylesheet" href="/css/print.css">
</head>
<body>
    <div class="print-container">
        <header class="print-header">
            <img src="/images/school-logo.png" alt="School Logo" class="school-logo">
            <h1><%= orgName %></h1>
            <img src="<%= student.image %>" alt="Student Image" class="student-image">
            <h2><%= student.name %></h2>
            <p>Date: <%= date %></p>
        </header>

        <main class="print-main">
            <table>
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    <% student.subjects.forEach(function(subject) { %>
                        <tr>
                            <td><%= subject.name %></td>
                            <td><%= subject.grade %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </main>

        <button onclick="window.print();">Print this page</button>


    <div class="watermark"><%= orgName %></div>
</body>
</html>