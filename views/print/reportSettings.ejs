<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Settings</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            width: 100%;
            display: flex;
            justify-content: space-between;
            gap: 20px;
            padding: 20px;
        }

        h2 {
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: inline-block;
            font-weight: bold;
            margin-right: 10px;
        }

        .form-group input,
        .form-group textarea,
        .form-group select {
            width: calc(100% - 15px);
            padding: 8px;
            margin-top: 5px;
        }

        .btn {
            padding: 8px 16px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .remarks-list div {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            margin-bottom: 8px;
        }

        .remarks-list a {
            color: red;
            text-decoration: none;
        }

        .remarks-list a:hover {
            text-decoration: underline;
        }

        .form-section {
            flex: 1;
        }

        .signature-section {
            margin-top: 40px;
        }

        img {
            max-width: 100px;
        }

        .form-checkbox-group {
            display: flex;
            align-items: center;
            margin-bottom: 5px;
        }

        .form-checkbox-group label {
            flex: 1;
        }

        .form-checkbox-group input[type="checkbox"] {
            margin-left: 10px;
        }
    </style>
</head>

<body>
    <% if (success_msg) { %>
        <div class="alert alert-success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg) { %>
        <div class="alert alert-danger"><%= error_msg %></div>
    <% } %>

    <div class="link-to-next-back">
        <button class="btn btn-primary" onclick="window.print()">Print Report</button>
        <a href="/print/printStudentReport?classId=<%= classId %>&termId=<%= termId %>" class="btn btn-primary">Back</a>
    </div>
    <hr>
    <div class="container">

        <!-- Status Settings Form -->
        <div class="form-section">
            <form action="/print/savePromotionSettings" method="POST">
                <h2>Status Settings</h2>
                <div class="form-group">
                    <label for="cutOffPoint">Cut Off Point:</label>
                    <input type="number" name="cutOffPoint" id="cutOffPoint" value="<%= statusSettings.cut_off_point || '' %>">
                </div>
                <div class="form-group">
                    <label for="promotedClass">Promoted Class:</label>
                    <select name="promotedClass">
                        <% enrolledClasses.forEach(classItem => { %>
                            <option value="<%= classItem.class_id %>" <%= statusSettings.promoted_class === classItem.class_id ? 'selected' : '' %>>
                                <%= classItem.class_name %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="repeatedClass">Repeated Class:</label>
                    <select name="repeatedClass">
                        <% enrolledClasses.forEach(classItem => { %>
                            <option value="<%= classItem.class_id %>" <%= statusSettings.repeated_class === classItem.class_id ? 'selected' : '' %>>
                                <%= classItem.class_name %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group form-checkbox-group">
                    <label for="activatePromotion">Activate Promotion</label>
                    <input type="checkbox" id="activatePromotion" name="activatePromotion" <%= statusSettings.activate_promotion ? 'checked' : '' %> />
                </div>
                <div class="form-group">
                    <label for="schoolReopenDate">School Reopen Date:</label>
                    <input type="date" name="schoolReopenDate" id="schoolReopenDate" value="<%= statusSettings.school_reopen_date || '' %>">
                </div>
                <% if (statusSettings.school_reopen_date) { %>
                    <p><strong>Saved Date:</strong> <%= new Date(statusSettings.school_reopen_date).toLocaleDateString() %></p>
                <% } %>
                <button type="submit" class="btn">Save Status Settings</button>

                <!-- Apply to classes -->
                <div class="form-group">
                    <label for="applyToClasses">Apply Status Settings To:</label>
                  
                    <% enrolledClasses.forEach(classItem => { %>
                        <div class="form-checkbox-group">
                            <label for="class-<%= classItem.class_id %>"><%= classItem.class_name %></label>
                            <input type="checkbox" name="selectedStatusClasses" class="selectedStatusClasses" value="<%= classItem.class_id %>">
                        </div>
                    <% }) %>
                </div>
            </form>
        </div>

        <!-- Teacher's Remarks Form -->
        <div class="form-section">
            <form action="/print/saveTeacherRemarks" method="POST">
                <h2>Teacher's Remarks</h2>
                <div class="form-group">
                    <textarea name="teacherRemarks" id="teacherRemarks" required></textarea>
                </div>
                <button type="submit" class="btn">Save Teacher's Remarks</button>
                <br>
                <hr>
                <div class="remarks-list">
                    <% teacherRemarks.forEach((remark) => { %>
                        <div>
                            <span><%= remark.remark %></span>
                            <a href="/print/deleteTeacherRemark/<%= remark.id %>">Delete</a>
                        </div>
                    <% }); %>
                </div>
                <hr>
                <div class="form-group">
                    <label for="applyToClasses">Apply Teacher's Remarks To:</label>
                
                    <% enrolledClasses.forEach(classItem => { %>
                        <div class="form-checkbox-group">
                            <label for="class-<%= classItem.class_id %>"><%= classItem.class_name %></label>
                            <input type="checkbox" name="selectedTeacherRemarksClasses" class="selectedTeacherRemarksClasses" value="<%= classItem.class_id %>">
                        </div>
                    <% }) %>
                </div>
            </form>
        </div>

        <!-- Score Remarks Form -->
        <div class="form-section">
            <form action="/print/saveScoreRemarks" method="POST">
                <h2>Score Remarks</h2>
                <div class="form-group">
                    <label for="remark">Remark:</label>
                    <input type="text" name="remark" id="remark" required>
                </div>
                <div class="form-group">
                    <label for="from_percentage">From Percentage:</label>
                    <input type="number" name="from_percentage" id="from_percentage" required min="0" max="100">
                </div>
                <div class="form-group">
                    <label for="to_percentage">To Percentage:</label>
                    <input type="number" name="to_percentage" id="to_percentage" required min="0" max="100">
                </div>
                <button type="submit" class="btn">Save Score Remark</button>
                <br>
                <hr>
                <div class="remarks-list">
                    <% scoreRemarks.forEach((remark) => { %>
                        <div>
                            <span><%= remark.remark %> (From: <%= remark.from_percentage %>% To: <%= remark.to_percentage %>%)</span>
                            <a href="/print/deleteScoreRemark/<%= remark.id %>">Delete</a>
                        </div>
                    <% }); %>
                </div>
                <hr>
                <div class="form-group">
                    <label for="applyToClasses">Apply Score Remarks To:</label>
                 
                    <% enrolledClasses.forEach(classItem => { %>
                        <div class="form-checkbox-group">
                            <label for="class-<%= classItem.class_id %>"><%= classItem.class_name %></label>
                            <input type="checkbox" name="selectedScoreRemarksClasses" class="selectedScoreRemarksClasses" value="<%= classItem.class_id %>">
                        </div>
                    <% }) %>
                </div>
            </form>
        </div>

        <!-- Signature Image Section -->
        <div class="form-section signature-section">
            <form action="/print/uploadSignatureImage" method="POST" enctype="multipart/form-data">
                <h2>Signature Image</h2>
                <% if (signatureImageUrl) { %>
                    <div>
                        <img src="<%= signatureImageUrl %>" alt="Current Signature" style="max-width: 100px; display: block; margin-bottom: 10px;">
                        <a href="/print/deleteSignatureImage" class="btn btn-danger" id="delete-image-btn">Delete Signature Image</a>
                    </div>
                <% } else { %>
                    <p>No signature uploaded.</p>
                <% } %>
                <div class="form-group">
                    <input type="file" name="signatureImage" accept="image/*" required>
                </div>
                <button type="submit" class="btn">Upload Signature Image</button>
                <hr>
                <div class="form-group">
                    <label for="applyToClasses">Apply Signature Image To:</label>
                    <% enrolledClasses.forEach(classItem => { %>
                        <div class="form-checkbox-group">
                            <label for="class-<%= classItem.class_id %>"><%= classItem.class_name %></label>
                            <input type="checkbox" name="selectedSignatureClasses" class="selectedSignatureClasses" value="<%= classItem.class_id %>">
                        </div>
                    <% }) %>
                </div>
            </form>
        </div>
    </div>

    <!-- JavaScript for Select All functionality -->
    <script>
        function toggleAllCheckboxes(className, selectAllCheckbox) {
            const checkboxes = document.querySelectorAll('.' + className);
            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAllCheckbox.checked;
            });
        }

        document.querySelectorAll('[id^="applyAllClasses"]').forEach(selectAllCheckbox => {
            selectAllCheckbox.addEventListener('change', function () {
                const className = selectAllCheckbox.name.replace("applyAllClasses", "").trim();
                const targetClass = `selected${className}Classes`;
                document.querySelectorAll('.' + targetClass).forEach(checkbox => {
                    checkbox.checked = selectAllCheckbox.checked;
                });
            });
        });


        document.getElementById('delete-image-btn').addEventListener('click', function (event) {
            const confirmation = confirm('This will permanently delete the image from S3. Are you sure?');
            if (!confirmation) {
                event.preventDefault(); // Prevent deletion if user cancels
            }
        });

    </script>
</body>

</html>