<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Student Report</title>
    <style>
        body {
            margin: 0;
            padding: 20px;
            background-color: #f9f9f9;
        }
        .actions {
            text-align: center;
            margin-bottom: 20px;
        }
        .student-report {
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
            background-color: #fff;
            max-width: 800px;
            margin: 20px auto;
            box-sizing: border-box;
            page-break-after: always;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .header img.logo,
        .header img.student-image {
            width: 75px;
            height: 75px;
            object-fit: cover;
            border-radius: 8px;
        }
        .header h1, .header h2 {
            margin: 0;
            text-align: center;
            flex-grow: 1;
        }
        .info, .attendance-info {
            width: 90%;
            margin: 0 auto;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            font-size: 12px;
        }
        th {
            background-color: #f2f2f2;
        }
        .remarks, .signature-info {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        .remarks {
            width: 48%;
            
        }
        .signature-info {
            position: relative;
            left: 100%;
            top: 10px;
            width: 48%;
            text-align: right;
        }

        .remarks-container {
    position: relative;
    top: -10px; /* Move the Teacher's Remarks section up by 10px */
}

        .signature-info img{
            position: absolute;
            top: -30px;
            right: 10px;
        }
        
        /* Style for the select dropdown */
        .remarks select {
            width: 100%;
            border: none;
            background: transparent;
            font-size: 12px;
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            text-overflow: wrap;
            white-space: normal;
            word-wrap: break-word;
            line-height: 1.5;
            left: 45px;
            position: relative;
        }
        
        /* Specific style to avoid cutting text in the dropdown */
        .remarks select option {
            white-space: normal;
            padding: 10px;
            background-color: #fff;
            border: 1px solid #ddd;
        }
        
        .btn {
            display: inline-block;
            padding: 8px 12px;
            font-size: 12px;
            color: #fff;
            background-color: #007BFF;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }


/* Center the content in the table */
.promotion-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
    text-align: center; /* Center text in the table */
}

.promotion-table th, 
.promotion-table td {
    border: 1px solid #ddd; /* Ensure table borders are visible */
    padding: 8px; /* Add padding for better spacing */
    vertical-align: middle; /* Vertically center the content */
    text-align: center; /* Center text horizontally */
    font-size: 12px; /* Keep font size consistent */
}

/* Style for the promotion dropdown (remove border) */
.promotion-table select {
    width: 100px; /* Set a fixed width for the dropdown */
    padding: 2px;
    font-size: 12px;
    margin: 0 auto; /* Center the dropdown */
    display: block; /* Ensure the dropdown is treated as a block element */
    border: none; /* Remove border from the dropdown */
    background: transparent; /* Set the background to transparent */
    appearance: none; /* Remove the default dropdown styling */
    -webkit-appearance: none;
    -moz-appearance: none;
}

/* Ensure the table is centered in the div */
.attendance-info {
    display: flex;
    justify-content: center; /* Horizontally center the table */
    margin-top: 10px;
}

/* Ensure that cells are not overflowing and breaking */
.promotion-table td {
    white-space: nowrap; /* Prevent text from wrapping unnecessarily */
}

/* Ensure the table is centered in the div */
.attendance-info {
    display: flex;
    justify-content: center; /* Horizontally center the table */
    margin-top: 10px;
}

/* Ensure that cells are not overflowing and breaking */
.promotion-table td {
    white-space: nowrap; /* Prevent text from wrapping unnecessarily */
}
/* Adjust for mobile or smaller screens if needed */
@media (max-width: 768px) {
    .promotion-table td, 
    .promotion-table th {
        font-size: 12px; /* Reduce font size for smaller screens */
    }
}

/* Adjust for print layout */
@media print {
    @page {
        size: A4 portrait;
        margin: 20mm;
    }

    .actions, .no-print {
        display: none;
    }

    .student-report {
        max-width: 100%;
        margin: 0 auto;
        padding: 20px;
        box-sizing: border-box;
        page-break-after: always;
    }
    
    .header img.logo,
    .header img.student-image {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 8px;
    }

    table {
        width: 100%;
    }
}
    </style>
</head>
<body>
    <div class="actions no-print">
        <button class="btn btn-primary" onclick="printAllReports()">Print All Reports</button>
        <a href="/print/reportSettings?classId=<%= classId %>" class="btn btn-primary">Report Settings</a>
    </div>
    <hr>
    <% if (students.length === 0) { %>
        <p>No student data available</p>
    <% } else { %>
        <% students.forEach((student, index) => { %>
            <div class="student-report" id="report-<%= index %>">
                <div class="header">
                    <% if (session.logo) { %>
                        <img src="<%= session.logo %>" alt="Organization Logo" class="logo" />
                    <% } %>
                    <div>
                        <h1><%= orgName %></h1>
                        <h2><%= orgAddress %></h2>
                    </div>
                    <% if (student.image_url && student.image_url !== 'profilePlaceholder.png') { %>
                        <img src="<%= student.image_url %>?v=<%= new Date().getTime() %>" alt="Student Image" class="student-image">
                    <% } else { %>
                        <img src="/images/profilePlaceholder.png" alt="Placeholder Image" class="student-image">
                    <% } %>
                </div>
                <h2 style="text-align: center;">Student Report</h2>
                <div class="info">
                    <table>
                        <tr>
                            <td>Student Name:</td>
                            <td><%= student.first_name %> <%= student.last_name %></td>
                            <td>Term:</td>
                            <td><%= term ? term.term_name : 'No term available' %></td>
                        </tr>
                        <tr>
                            <td>Student No:</td>
                            <td><%= student.student_id %></td>
                            <td>Academic Year:</td>
                            <td>2023-2024</td>
                        </tr>
                        <tr>
                            <td>Class:</td>
                            <td><%= student.class_name %></td>
                            <td>School Reopens:</td>
                            <td><%= schoolReopenDate ? new Date(schoolReopenDate).toLocaleDateString() : 'TBA' %></td>
                        </tr>
                    </table>
                </div>
                <br>
                <div class="subjects">
                    <table>
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Class Score</th>
                                <th>Exams Score</th>
                                <th>Other Score</th>
                                <th>Total Score</th>
                                <th>Total Percentage</th>
                                <th>Grade</th>
                                <th>Position</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% student.subjects.forEach(subject => { %>
                                <tr>
                                    <td><%= subject.subject_name %></td>
                                    <!-- Ensure the Class Score, Exams Score, and Other Score are fetched and displayed correctly -->
                                    <td><%= subject.classAssessmentScore !== '-' ? parseFloat(subject.classAssessmentScore).toFixed(2) : '-' %></td>
                                    <td><%= subject.examsAssessmentScore !== '-' ? parseFloat(subject.examsAssessmentScore).toFixed(2) : '-' %></td>
                                    <td><%= subject.otherAssessmentScore !== '-' ? parseFloat(subject.otherAssessmentScore).toFixed(2) : '-' %></td>
                                    <td><%= subject.totalScore !== '-' ? parseFloat(subject.totalScore).toFixed(2) : '-' %></td>
                                    <td><%= subject.totalPercentage !== '-' ? parseFloat(subject.totalPercentage).toFixed(2) : '-' %> %</td>
                                    <td><%= subject.grade %></td>
                                    <td><%= subject.position !== '-' ? subject.position : '-' %></td>
                                    <td><%= subject.remarks || '-' %></td>
                                </tr>
                            <% }) %>
                        </tbody>

                    </table>
                </div>
                <br>
                <!-- New Table for Attendance, Position, and Promotion Status -->
                <div class="attendance-info">
                    <table class="promotion-table">
                        <tr>
                            <td>Position in Class:</td>
                            <td><%= student.positionInClass %></td>
                            <td>Overall Percentage:</td>
                            <td><%= student.overallPercentage %> %</td>
                            <td>Attendance:</td>
                            <td>20/50</td>
                        </tr>
                
                        <% if (activatePromotion) { %> <!-- Show only if promotion is activated -->
                        <tr>
                            <td>
                                <select name="promotionStatus-<%= student.student_id %>" id="promotionStatus-<%= student.student_id %>" onchange="updateClass('<%= student.student_id %>')">
                                    <option value="Promoted" <%= student.promotionStatus === 'Promoted' ? 'selected' : '' %>>Promoted To:</option>
                                    <option value="Repeated" <%= student.promotionStatus === 'Repeated' ? 'selected' : '' %>>Repeated In:</option>
                                </select>
                            </td>
                            <td id="promotionClass-<%= student.student_id %>"><%= student.promotionClass %></td>
                        </tr>
                        <% } %>
                    </table>
                </div>
                                 
                <br>
                <div class="remarks">
                    <div class="remarks-container">
                        <select id="teacherRemarks-<%= index %>" name="teacherRemarks-<%= index %>">
                            <% teacherRemarks.forEach(function(remark) { %>
                                <option value="<%= remark.remark %>" <%= remark.remark === student.teacherRemarks ? 'selected' : '' %>><%= remark.remark %></option>
                            <% }); %>
                        </select>
                        <h3>Teacher's Remarks</h3>
                    </div>
                
                    <div class="signature-info">
                        <h3>Signature</h3>
                        <% if (signatureImageUrl) { %>
                            <img src="<%= signatureImageUrl %>" alt="Signature Image" style="max-width: 100px; display: block; margin-bottom: 10px;">
                        <% } else { %>
                            <p>No signature available.</p>
                        <% } %>
                    </div>
                </div>
                <div class="print no-print">
                    <button class="btn btn-primary" onclick="printReport(<%= index %>)">Print This Report</button>
                </div>
            </div>
        <% }); %>
    <% } %>

    <script>
        function printReport(index) {
            const printContents = document.getElementById('report-' + index).outerHTML;
            const originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }

        function printAllReports() {
            const printContents = Array.from(document.querySelectorAll('.student-report')).map(report => report.outerHTML).join('');
            const originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }

        function updateClass(studentId) {
        // Get the current promotion status selected
        const statusSelect = document.getElementById('promotionStatus-' + studentId);
        const selectedStatus = statusSelect.value;

        // Get the elements where the class is displayed
        const classCell = document.getElementById('promotionClass-' + studentId);

        // Define the promoted and repeated class values (these should be retrieved from your backend settings)
        const promotedClass = '<%= promotedClass %>';
        const repeatedClass = '<%= repeatedClass %>';

        // Update the class based on the selected promotion status
        if (selectedStatus === 'Promoted') {
            classCell.innerHTML = promotedClass;
        } else if (selectedStatus === 'Repeated') {
            classCell.innerHTML = repeatedClass;
        }
    }
    </script>
</body>
</html>
