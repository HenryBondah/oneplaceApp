<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Student Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f9f9f9;
        }
        .actions {
            text-align: center;
            margin-bottom: 20px;
        }
        .student-report {
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
            background-color: #fff;
            max-width: 800px;
            margin: 20px auto;
            box-sizing: border-box;
            page-break-after: always;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .header img.logo,
        .header img.student-image {
            width: 75px;
            height: 75px;
            object-fit: cover;
            border-radius: 8px;
        }
        .header h1, .header h2 {
            margin: 0;
            text-align: center;
            flex-grow: 1;
        }
        .info, .attendance-info {
            width: 90%;
            margin: 0 auto;
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            font-size: 12px;
        }
        th {
            background-color: #f2f2f2;
        }
        .remarks, .signature-info {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        .remarks {
            width: 48%;
        }
        .signature-info {
            position: relative;
            left: 130%;
            width: 48%;
            text-align: right;
        }
        .remarks select {
            width: 100%;
        }
        .btn {
            display: inline-block;
            padding: 8px 12px;
            font-size: 12px;
            color: #fff;
            background-color: #007BFF;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }

        @media print {
            @page {
                size: A4 portrait;
                margin: 20mm;
            }
            .actions, .no-print {
                display: none;
            }
            .student-report {
                max-width: 100%;
                margin: 0 auto;
                padding: 20px;
                box-sizing: border-box;
                page-break-after: always;
            }
            
            .header img.logo,
            .header img.student-image {
                width: 50px;
                height: 50px;
                object-fit: cover;
                border-radius: 8px;
            }
            table {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="actions no-print">
        <button class="btn btn-primary" onclick="printAllReports()">Print All Reports</button>
        <a href="/print/remarks" class="btn btn-primary">Manage Remarks</a>
    </div>
    <hr>
    <% if (students.length === 0) { %>
        <p>No student data available</p>
    <% } else { %>
        <% students.forEach((student, index) => { %>
            <div class="student-report" id="report-<%= index %>">
                <div class="header">
                    <% if (session.logo) { %>
                        <img src="<%= session.logo %>" alt="Organization Logo" class="logo" />
                    <% } %>
                    <div>
                        <h1><%= orgName %></h1>
                        <h2><%= orgAddress %></h2>
                    </div>
                    <% if (student.image_url && student.image_url !== 'profilePlaceholder.png') { %>
                        <img src="<%= student.image_url %>?v=<%= new Date().getTime() %>" alt="Student Image" class="student-image">
                    <% } else { %>
                        <img src="/images/profilePlaceholder.png" alt="Placeholder Image" class="student-image">
                    <% } %>
                </div>
                <h2 style="text-align: center;">Student Report</h2>
                <div class="info">
                    <table>
                       
                        <tr>
                            <td>Student Name:</td>
                            <td><%= student.first_name %> <%= student.last_name %></td>
                            <td>Term:</td>
                            <td><%= term.term_name %></td>
                        </tr>
                        <tr>
                            <td>Student No:</td>
                            <td><%= student.student_id %></td>
                            <td>Academic Year:</td>
                            <td>2023-2024</td>
                        </tr>
                        <tr>
                            <td>Class:</td>
                            <td><%= student.class_name %></td>
                            <td>School Reopens:</td>
                            <td><%= new Date(term.school_reopen_date).toLocaleDateString() %></td>
                        </tr>
                    </table>
                </div>
                <br>
                <div class="subjects">
                    <table>
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Class Score</th>
                                <th>Exams Score</th>
                                <th>Other Score</th>
                                <th>Total Score</th>
                                <th>Total Percentage</th>
                                <th>Grade</th>
                                <th>Position</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% student.subjects.forEach(subject => { %>
                                <tr>
                                    <td><%= subject.subject_name %></td>
                                    <td><%= subject.classAssessmentScore !== '-' ? parseFloat(subject.classAssessmentScore).toFixed(2) : '-' %></td>
                                    <td><%= subject.examsAssessmentScore !== '-' ? parseFloat(subject.examsAssessmentScore).toFixed(2) : '-' %></td>
                                    <td><%= subject.otherAssessmentScore !== '-' ? parseFloat(subject.otherAssessmentScore).toFixed(2) : '-' %></td>
                                    <td><%= subject.totalScore !== '-' ? parseFloat(subject.totalScore).toFixed(2) : '-' %></td>
                                    <td><%= subject.totalPercentage !== '-' ? parseFloat(subject.totalPercentage).toFixed(2) : '-' %> %</td>
                                    <td><%= subject.grade %></td>
                                    <td><%= subject.position !== '-' ? subject.position : '-' %></td>
                                    <td><%=  %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <br>
                <div class="attendance-info">
                    <table>
                        <tr>
                            <td>Total Attendance:</td>
                            <td><%= student.attendance %> / <%= term.total_days %> days</td>
                            <td>Position in Class:</td>
                            <td><%= student.position !== '-' ? student.position : '-' %></td>
                            <td>Promotion Status:</td>
                            <td><%= student.promotionStatus %></td>
                        </tr>
                    </table>
                </div>
                <div class="remarks">
                    <div>
                        <h3>Teacher's Remarks</h3>
                        <select id="teacherRemarks-<%= index %>" name="teacherRemarks-<%= index %>">
                            <% teacherRemarks.forEach(function(remark) { %>
                                <option value="<%= remark %>" <%= remark === student.teacherRemarks ? 'selected' : '' %>><%= remark %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="signature-info">
                        <h3>Signature</h3>
                        <% if (signatureImageUrl) { %>
                            <img src="/<%= signatureImageUrl %>" alt="Signature Image">
                        <% } %>
                    </div>
                </div>
                <div class="print no-print">
                    <button class="btn btn-primary" onclick="printReport(<%= index %>)">Print This Report</button>
                </div>
            </div>
        <% }); %>
    <% } %>

    <script>
        function printReport(index) {
            const printContents = document.getElementById('report-' + index).outerHTML;
            const originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }

        function printAllReports() {
            const printContents = Array.from(document.querySelectorAll('.student-report')).map(report => report.outerHTML).join('');
            const originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }
    </script>
</body>
</html>
